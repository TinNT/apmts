<h1>Listing events</h1>

<table class="table table-bordered">
  <tr>
    <th>Service</th>
    <th>Entry</th>
    <th>Start at</th>
    <th>End at</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.service_id %></td>
    <td><%= event.entry_id %></td>
    <td><%= event.start_at %></td>
    <td><%= event.end_at %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'Show', event, :class => "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-default" %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />


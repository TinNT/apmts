<h1>Listing services</h1>

<table>
  <tr>
    <th>Persona</th>
    <th>User</th>
    <th>Name</th>
    <th>Description</th>
    <th>Duration</th>
    <th>Participant</th>
    <th>Deleted at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.persona_id %></td>
    <td><%= service.user_id %></td>
    <td><%= service.name %></td>
    <td><%= service.description %></td>
    <td><%= service.duration %></td>
    <td><%= service.participant %></td>
    <td><%= service.deleted_at %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

